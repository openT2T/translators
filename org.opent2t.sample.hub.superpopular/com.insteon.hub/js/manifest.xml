<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <schemas>
    <schema id="org.opent2t.sample.hub.superpopular" main="true" type="OCF" />
    <schema id="oic.core" type="OCF" />
    <schema id="oic.baseResource" type="OCF" />
  </schemas>
  <!-- associated onboarding module -->
  <onboarding id="org.opent2t.onboarding.Insteonhub">
    <onboardflow name="getUserInput">
      <flow type="input">
        <arg name="username" />
        <description language="en">Type in your Insteon username</description>
        <description language="fr">Entrez for nom pour Insteon</description>
      </flow>
      <flow type="password">
        <arg name="password"  />
        <description language="en">Type in your Insteon password</description>
        <description language="fr">Entrez for password pour Insteon</description>
      </flow>
    </onboardflow>
    <onboardflow name="getDeveloperInput">
      <flow>
        <arg name="client_id" />
        <description language="en">Ask for Client id</description>
        <description language="fr">Demandez Client ID</description>
      </flow>
    </onboardflow>
  </onboarding>
</manifest>