<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <schemas>
      <schema id="org.opent2t.sample.hub.superpopular" main="true" type="OCF" />
      <schema id="oic.core" type="OCF" />
      <schema id="oic.baseResource" type="OCF" />
  </schemas>
  <!-- associated onboarding module -->
  <onboarding id="org.opent2t.onboarding.winkhub">
    <onboardflow name="getUserInput">
      <flow type="input">
        <arg name="username" />
        <description language="en">Type in your Wink username </description>
        <description language="fr">Entrez for nom pour Wink </description>
      </flow>
      <flow type="password">
        <arg name="password"  />
        <description language="en">Type in your Wink password </description>
        <description language="fr">Entrez for password pour Wink </description>
      </flow>
    </method>

    <onboardflow name="getDeveloperInput">
      <flow>
        <arg name="client_id" />
        <description language="en"> Ask for Client ID </description>
        <description language="fr"> Demandez Client ID </description>
      </flow>
      <flow>
        <arg name="client_secret" />
        <description language="en"> Ask for Client Secret </description>
        <description language="fr"> Demandez Client Secret </description>
      </flow>
    </onboardflow>

  </onboarding>
</manifest>