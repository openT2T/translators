                },
                "pi": "8045C566-B44B-462F-A4AB-FA7FC968CE71",
                "mnmn": "Contoso",
                "n": "Bedside lamp",
                "rt": ["opent2t.p.lamp"],
                "entities": [
                  {
                    "rt": ["oic.d.lamp"],
                    "n": "Device 1",
                    "di": "A94F0FBE-9D2D-4A81-A99B-4024AADB1631",
                    "icv": "core.1.1.0",
                    "dmv": "res.1.1.0",
