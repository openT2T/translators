/devices/{deviceid}:
  /power:
    displayName: Power
    is: [ interface-actuator ]

    get:
      responses:
        200:
          body:
            application/json:
              schema: BinarySwitch
              example: |
                {
                  "rt": ["oic.r.switch.binary"],
                  "id": "unique_example_id",
                  "value": false
                }
    post:
      body:
        application/json:
          schema: BinarySwitch
          example: |
            {
              "id": "unique_example_id",
              "value": true
            }
      responses:
        200:
          body:
            application/json:
              schema: BinarySwitch
              example: |
                {
                  "id": "unique_example_id",
                  "value": true
                }

  /colourMode:
    displayName: Colour Mode
    is: [ interface-sensor ]

    get:
      queryParameters:
           page:
             type: integer

      responses:
        200:
          body:
            application/json:
              schema: Mode
              example: |
                {
                  "rt": ["oic.r.mode"],
                  "id": "unique_example_id",
                  "modes": ["rgb"],
                  "supportedModes": ["rgb","hs", "xy", "ct"]
                }

  /colourRGB:
    displayName: Colour RGB
    is: [ interface-actuator ]

    get:
      responses:
        200:
          body:
            application/json:
              schema: ColourRGB
              example: |
                {
                  "rt": ["oic.r.colour.rgb"],
                  "id": "unique_example_id",
                  "rgbValue": [255,255,255]
                }
    post:
      body:
        application/json:
          schema: ColourRGB
          example: |
            {
              "id": "unique_example_id",
              "rgbValue": [0,0,0]
            }
      responses:
        200:
          body:
            application/json:
              schema: ColourRgb
              example: |
                {
                  "id": "unique_example_id",
                  "rgbValue": [0,0,0]
                }

  /dim:
    displayName: Dim
    is: [ interface-actuator ]

    get:
      responses:
        200:
          body:
            application/json:
              schema: Dimming
              example: |
                {
                  "rt": ["oic.r.light.dimming"],
                  "id": "unique_example_id",
                  "dimmingSetting": 30,
                  "step": 5,
                  "range": [0,100]
                }
    post:
      body:
        application/json:
          schema: Dimming
          example: |
            {
              "id": "unique_example_id",
              "dimmingSetting": 50
            }
      responses:
        200:
          body:
            application/json:
              schema: Dimming
              example: |
                {
                  "id": "unique_example_id",
                  "dimmingSetting": 50
                }

  /colourChroma:
    displayName: Colour Chroma
    is: [ interface-actuator ]

    get:
      responses:
        200:
          body:
            application/json:
              schema: ColourChroma
              example: |
                {
                  "rt":         ["oic.r.colour.chroma"],
                  "id":         "unique_example_id",
                  "hue":        13088,
                  "saturation": 212,
                  "csc":        [0.41,0.51],
                  "ct":         457
                }

    post:
      body:
        application/json:
          schema: ColourChroma
          example: |
            {
              "id":         "unique_example_id",
              "hue":        13088,
              "saturation": 212,
              "csc":        [0.41,0.51],
              "ct":         457
            }
      responses:
        200:
          body:
            application/json:
              schema: ColourChroma
              example: |
                {
                  "id":          "unique_example_id",
                  "hue":         13088,
                  "saturation":  212,
                  "csc":         [0.41,0.51],
                  "ct":          467
                }

#
# Notification subscription URIs
#

/subscribe:
  description: |
    This resource manages subscriptions to changes on this device.
  displayName: Subscribe
    
  post:
    description: |
        Creates or refreshes a subscription to this lamp.  This method can be called twice, first with
        a callback URL (verificationRequest will be ignored), and the second time with the parameters of an http GET to the
        callback Url server for verification of the subscription (in which case callback Url will be ignored). The second call
        will construct a response that should be returned to the notifications server.
    body:
      application/json:
        schema: Subscription
        example: |
          {
            "callbackUrl": "http://myserver.com",
          }    
    responses:
       200:
        body:
          application/json:
            schema: Subscription
            example: |
                {
                  "callbackUrl":"http://myserver.com",
                  "expiration": "123456678",
                  "response": { "plain text response" }
                }
       400:
          body:
            application/json:
              example: { "message": "Bad request" }
       403:
          body:
            application/json:
              example: { "message": "Subscription is denied" }

  delete:
    description: Unsubscribes to notifications to a callback Url
    body:
      application/json:
        schema: Subscription
        example: |
          {
            "callbackUrl": "http://myserver.com",
          } 
    responses:
      200:
        body:
          application/json:
          example: {}
